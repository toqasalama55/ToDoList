@model ListItems
<form action="/ListItem/SaveEdit">
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group">
        <label for="exampleInputEmail1">Title:</label>
        <input type="text" class="form-control" id="title" value="@Model.title" name="title">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Description:</label>
        <input type="text" class="form-control" id="description" value="@Model.description" name="description">
    </div> 
    
    <div class="form-group">
        <label for="datetime">Deadline:</label>
        <input type="datetime-local" class="form-control" id="Deadline" name="Deadline" value="@Model.Deadline.ToString("yyyy-MM-ddTHH:mm")">
    </div> 
    
  

    <button type="submit" class="btn btn-primary">
        Edit
    </button>
</form>